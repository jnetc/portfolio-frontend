{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@About/*": ["./components/about/*"],
      "@Anchor": ["./components/anchor/Anchor"],
      "@ButtonWithArrow": ["./components/button-with-arrow/ButtonWithArrow"],
      "@Footer": ["./components/footer/Footer"],
      "@GoToTopButton": ["components/go-to-top-button/GoToTopButton"],
      "@Helpers/*": ["./helpers/*"],
      "@Home/*": ["./components/home/*"],
      "@Hooks/*": ["./hooks/*"],
      "@Img": ["./components/img/Img"],
      "@Links/*": ["./components/links/*"],
      "@MainContext": ["./components/main-context/MainContext"],
      "@Modal/*": ["./components/modal/*"],
      "@ModalMailform": ["components/modal/modal-email-form"],
      "@ModalForEmployers": ["components/modal/modal-for-employers"],
      "@Navigation/*": ["./components/navigation/*"],
      "@Notice": ["./components/notice/Notice"],
      "@PageError/*": ["./components/page-error/*"],
      "@Portfolio/*": ["./components/portfolio/*"],
      "@Resume/*": ["./components/resume/*"],
      "@Sanity/*": ["./lib/*"],
      "@ScrollArea": ["./components/scroll-area/ScrollArea"],
      "@Separator": ["./components/separator/Separator"],
      "@Skills/*": ["./components/skills/*"],
      "@Store": ["./pages"],
      "@Styles/*": ["./styles/*"],
      "@Types": ["types.ts"]
    },
    "pretty": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2016"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/api/nodemailer.ts", "lib/sanity.client.ts", "lib/sanity.preview.ts"],
  "exclude": ["node_modules"]
}
